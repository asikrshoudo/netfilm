---
interface Props {
  id: string;
  title: string;
  thumb?: string;
  year?: number | string;
  genre?: string[];
  rating?: string;
  duration?: string;
  type: 'movie' | 'series';
}

const { id, title, thumb, year, genre, rating, duration, type } = Astro.props;
const href = `/${type === 'movie' ? 'movies' : 'series'}/${id}`;
---

<a href={href} class="card">
  <div class="card-thumb">
    {thumb
      ? <img src={thumb} alt={title} loading="lazy" />
      : <div class="no-thumb">{title[0]}</div>
    }
    <div class="card-overlay">
      <div class="play-btn-big">
        <svg viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
          <path d="M8 5v14l11-7z"/>
        </svg>
      </div>
    </div>
    {rating && <div class="badge rating">⭐ {rating}</div>}
    {type === 'series' && <div class="badge type-badge">Series</div>}
  </div>

  <div class="card-info">
    <h3 class="card-title">{title}</h3>
    <div class="card-meta">
      {year && <span>{year}</span>}
      {duration && <span>{duration}</span>}
    </div>
    {genre && genre.length > 0 &&
      <div class="card-genres">
        {genre.slice(0, 2).map(g => <span class="genre-tag">{g}</span>)}
      </div>
    }
  </div>
</a>

<style>
.card {
  display: block;
  border-radius: var(--radius-lg);
  overflow: hidden;
  background: var(--card);
  border: 1px solid var(--border);
  transition: all var(--transition);
  transform: translateY(0) scale(1);
}

.card:hover {
  transform: translateY(-6px) scale(1.02);
  border-color: rgba(124,111,255,0.3);
  box-shadow: 0 20px 60px rgba(0,0,0,0.6), 0 0 30px rgba(124,111,255,0.1);
}

.card-thumb {
  position: relative;
  aspect-ratio: 2/3;
  overflow: hidden;
  background: var(--surface);
}

.card-thumb img {
  width: 100%; height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.card:hover .card-thumb img {
  transform: scale(1.08);
}

.no-thumb {
  width: 100%; height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-display);
  font-size: 48px;
  font-weight: 800;
  color: var(--accent);
  background: linear-gradient(135deg, var(--surface), var(--card));
}

/* Overlay */
.card-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity var(--transition);
}

.card:hover .card-overlay { opacity: 1; }

.play-btn-big {
  width: 60px; height: 60px;
  background: rgba(124,111,255,0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transform: scale(0.8);
  transition: transform var(--transition);
  box-shadow: 0 0 30px rgba(124,111,255,0.5);
}

.card:hover .play-btn-big { transform: scale(1); }

/* Badges */
.badge {
  position: absolute;
  border-radius: 6px;
  font-size: 11px;
  font-weight: 600;
  padding: 3px 8px;
  letter-spacing: 0.3px;
}

.rating {
  top: 10px; right: 10px;
  background: rgba(0,0,0,0.8);
  border: 1px solid rgba(255,255,255,0.1);
  color: #ffc107;
}

.type-badge {
  top: 10px; left: 10px;
  background: rgba(124,111,255,0.8);
  color: #fff;
}

/* Info */
.card-info {
  padding: 14px;
}

.card-title {
  font-family: var(--font-display);
  font-size: 14px;
  font-weight: 700;
  line-height: 1.3;
  margin-bottom: 6px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.card-meta {
  display: flex;
  gap: 8px;
  font-size: 12px;
  color: var(--text-muted);
  margin-bottom: 8px;
}

.card-meta span + span::before {
  content: '·';
  margin-right: 8px;
}

.card-genres {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.genre-tag {
  font-size: 11px;
  padding: 2px 8px;
  border-radius: 99px;
  background: rgba(124,111,255,0.12);
  color: var(--accent);
  border: 1px solid rgba(124,111,255,0.2);
}
</style>
