---
import Layout from '../layouts/Layout.astro';
import { movies, series, music } from '../data/content.js';

const recentMovies = [...movies].slice(0, 10);
const recentSeries = [...series].slice(0, 10);
const recentlyAdded = [...movies, ...series]
  .sort(() => Math.random() - 0.5)
  .slice(0, 10);
---

<Layout title="Home">

  <div class="home-wrap">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         CONTINUE WATCHING
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <section class="section" id="continueSection" style="display:none">
      <div class="container">
        <div class="section-head">
          <div class="section-title-wrap">
            <span class="section-accent">â–¶</span>
            <h2 class="section-title">Continue Watching</h2>
          </div>
        </div>
        <div class="row-scroll" id="continueRow"></div>
      </div>
    </section>


    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         RECENTLY ADDED
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    {recentlyAdded.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-head">
            <div class="section-title-wrap">
              <span class="section-accent">ğŸ†•</span>
              <h2 class="section-title">Recently Added</h2>
            </div>
          </div>
          <div class="row-scroll">
            {recentlyAdded.map((item: any) => (
              <a
                href={`/${item.seasons ? 'series' : 'movies'}/${item.id}`}
                class="vcard"
                data-id={item.id}
                data-title={item.title}
                data-thumb={item.thumb}
                data-type={item.seasons ? 'series' : 'movie'}
              >
                <div class="vcard-thumb" style={item.thumb ? `background-image:url(${item.thumb})` : ''}>
                  {!item.thumb && <span class="vcard-letter">{item.title[0]}</span>}
                  <div class="vcard-hover">
                    <div class="vcard-play">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="white"><path d="M8 5v14l11-7z"/></svg>
                    </div>
                  </div>
                  {item.rating && <div class="vcard-rating">â­ {item.rating}</div>}
                  {item.seasons && <div class="vcard-badge">Series</div>}
                </div>
                <div class="vcard-info">
                  <div class="vcard-title">{item.title}</div>
                  <div class="vcard-meta">{item.year}{item.duration ? ` Â· ${item.duration}` : ''}</div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}


    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         MOVIES
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    {recentMovies.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-head">
            <div class="section-title-wrap">
              <span class="section-accent">ğŸ¬</span>
              <h2 class="section-title">Movies</h2>
            </div>
            <a href="/movies" class="see-all">See all <span>â†’</span></a>
          </div>
          <div class="row-scroll">
            {recentMovies.map((m: any) => (
              <a href={`/movies/${m.id}`} class="vcard">
                <div class="vcard-thumb" style={m.thumb ? `background-image:url(${m.thumb})` : ''}>
                  {!m.thumb && <span class="vcard-letter">{m.title[0]}</span>}
                  <div class="vcard-hover">
                    <div class="vcard-play">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="white"><path d="M8 5v14l11-7z"/></svg>
                    </div>
                  </div>
                  {m.rating && <div class="vcard-rating">â­ {m.rating}</div>}
                </div>
                <div class="vcard-info">
                  <div class="vcard-title">{m.title}</div>
                  <div class="vcard-meta">{m.year}{m.duration ? ` Â· ${m.duration}` : ''}</div>
                </div>
              </a>
            ))}
            <a href="/movies" class="vcard vcard-more">
              <div class="vcard-thumb vcard-more-thumb">
                <span>â†’</span>
                <div>See All Movies</div>
              </div>
            </a>
          </div>
        </div>
      </section>
    )}


    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         SERIES
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    {recentSeries.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-head">
            <div class="section-title-wrap">
              <span class="section-accent">ğŸ“º</span>
              <h2 class="section-title">TV Series</h2>
            </div>
            <a href="/series" class="see-all">See all <span>â†’</span></a>
          </div>
          <div class="row-scroll">
            {recentSeries.map((s: any) => (
              <a href={`/series/${s.id}`} class="vcard">
                <div class="vcard-thumb" style={s.thumb ? `background-image:url(${s.thumb})` : ''}>
                  {!s.thumb && <span class="vcard-letter">{s.title[0]}</span>}
                  <div class="vcard-hover">
                    <div class="vcard-play">
                      <svg width="22" height="22" viewBox="0 0 24 24" fill="white"><path d="M8 5v14l11-7z"/></svg>
                    </div>
                  </div>
                  {s.rating && <div class="vcard-rating">â­ {s.rating}</div>}
                  <div class="vcard-badge">Series</div>
                </div>
                <div class="vcard-info">
                  <div class="vcard-title">{s.title}</div>
                  <div class="vcard-meta">{s.year} Â· {s.seasons?.length || 0} Season{s.seasons?.length !== 1 ? 's' : ''}</div>
                </div>
              </a>
            ))}
            <a href="/series" class="vcard vcard-more">
              <div class="vcard-thumb vcard-more-thumb">
                <span>â†’</span>
                <div>See All Series</div>
              </div>
            </a>
          </div>
        </div>
      </section>
    )}


    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         MUSIC
    â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    {music.length > 0 && (
      <section class="section">
        <div class="container">
          <div class="section-head">
            <div class="section-title-wrap">
              <span class="section-accent">ğŸµ</span>
              <h2 class="section-title">Music</h2>
            </div>
            <a href="/music" class="see-all">See all <span>â†’</span></a>
          </div>
          <div class="music-row">
            {music.map((artist: any) => (
              <div
                class="music-card"
                data-playlist={JSON.stringify(artist.songs.map((s: any) => ({...s, artist: artist.artist, thumb: artist.thumb})))}
                onclick="playMusic(this)"
              >
                <div class="music-card-thumb" style={artist.thumb ? `background-image:url(${artist.thumb})` : ''}>
                  {!artist.thumb && <span>ğŸµ</span>}
                  <div class="music-card-overlay">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="white"><path d="M8 5v14l11-7z"/></svg>
                  </div>
                </div>
                <div class="music-card-info">
                  <div class="music-card-name">{artist.artist}</div>
                  <div class="music-card-count">{artist.songs.length} songs</div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}


    <!-- Empty state -->
    {movies.length === 0 && series.length === 0 && (
      <div class="empty container">
        <div class="empty-emoji">ğŸ¬</div>
        <h2>à¦•à§‹à¦¨à§‹ content à¦¨à§‡à¦‡ à¦à¦–à¦¨à§‹</h2>
        <p><code>src/data/content.js</code> à¦ content à¦¯à§‹à¦— à¦•à¦°à§‹<br/>à¦à¦¬à¦‚ <code>public/</code> à¦¤à§‡ video files à¦°à¦¾à¦–à§‹</p>
      </div>
    )}

    <div style="height:100px"></div>
  </div>

</Layout>

<style>
.home-wrap { padding-top: 80px; }

/* â”€â”€ SECTIONS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.section { padding: 40px 0 0; }

.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.section-title-wrap {
  display: flex;
  align-items: center;
  gap: 10px;
}

.section-accent { font-size: 20px; }

.section-title {
  font-family: var(--font-display);
  font-size: 20px;
  font-weight: 800;
  letter-spacing: -0.4px;
}

.see-all {
  font-size: 13px;
  font-weight: 600;
  color: var(--accent);
  opacity: 0.8;
  transition: opacity var(--transition);
}
.see-all:hover { opacity: 1; }


/* â”€â”€ VIDEO CARDS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.row-scroll {
  display: flex;
  gap: 14px;
  overflow-x: auto;
  padding-bottom: 12px;
  scrollbar-width: none;
  -ms-overflow-style: none;
  scroll-snap-type: x mandatory;
}
.row-scroll::-webkit-scrollbar { display: none; }

.vcard {
  flex-shrink: 0;
  width: 150px;
  scroll-snap-align: start;
  border-radius: 14px;
  overflow: hidden;
  background: var(--card);
  border: 1px solid var(--border);
  transition: all 0.3s cubic-bezier(0.4,0,0.2,1);
  display: block;
}

.vcard:hover {
  transform: translateY(-8px) scale(1.03);
  border-color: rgba(124,111,255,0.35);
  box-shadow: 0 20px 50px rgba(0,0,0,0.65), 0 0 0 1px rgba(124,111,255,0.2);
  z-index: 10;
}

.vcard-thumb {
  aspect-ratio: 2/3;
  background: var(--surface);
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vcard-letter {
  font-family: var(--font-display);
  font-size: 42px;
  font-weight: 800;
  color: var(--accent);
  opacity: 0.6;
}

.vcard-hover {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.25s;
}

.vcard:hover .vcard-hover { opacity: 1; }

.vcard-play {
  width: 52px; height: 52px;
  background: rgba(124,111,255,0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: scale(0.8);
  transition: transform 0.25s;
  box-shadow: 0 0 24px rgba(124,111,255,0.5);
}

.vcard:hover .vcard-play { transform: scale(1); }

.vcard-rating {
  position: absolute;
  top: 8px; right: 8px;
  background: rgba(0,0,0,0.75);
  border-radius: 6px;
  padding: 2px 7px;
  font-size: 10px;
  font-weight: 600;
  color: #ffc107;
}

.vcard-badge {
  position: absolute;
  top: 8px; left: 8px;
  background: rgba(124,111,255,0.85);
  border-radius: 6px;
  padding: 2px 7px;
  font-size: 10px;
  font-weight: 700;
  color: #fff;
}

.vcard-info { padding: 10px 12px 12px; }

.vcard-title {
  font-size: 12px;
  font-weight: 700;
  line-height: 1.3;
  margin-bottom: 3px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.vcard-meta { font-size: 11px; color: var(--text-muted); }

.vcard-more .vcard-thumb { background: var(--card); }
.vcard-more-thumb {
  flex-direction: column;
  gap: 10px;
  color: var(--accent);
  font-size: 28px;
  font-family: var(--font-display);
  font-weight: 800;
  text-align: center;
  padding: 12px;
  line-height: 1.3;
}
.vcard-more-thumb div {
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}


/* â”€â”€ MUSIC ROW â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.music-row {
  display: flex;
  gap: 14px;
  overflow-x: auto;
  padding-bottom: 12px;
  scrollbar-width: none;
}
.music-row::-webkit-scrollbar { display: none; }

.music-card {
  flex-shrink: 0;
  width: 160px;
  border-radius: 14px;
  overflow: hidden;
  background: var(--card);
  border: 1px solid var(--border);
  cursor: pointer;
  transition: all var(--transition);
}

.music-card:hover {
  transform: translateY(-6px);
  border-color: rgba(124,111,255,0.35);
  box-shadow: 0 16px 40px rgba(0,0,0,0.5);
}

.music-card-thumb {
  aspect-ratio: 1;
  background: var(--surface);
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36px;
  position: relative;
  overflow: hidden;
}

.music-card-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity var(--transition);
}

.music-card:hover .music-card-overlay { opacity: 1; }

.music-card-info { padding: 12px; }

.music-card-name {
  font-size: 13px;
  font-weight: 700;
  margin-bottom: 3px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.music-card-count { font-size: 11px; color: var(--text-muted); }


/* â”€â”€ EMPTY STATE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
.empty {
  min-height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  gap: 16px;
}

.empty-emoji { font-size: 72px; }

.empty h2 {
  font-family: var(--font-display);
  font-size: 26px;
  font-weight: 800;
}

.empty p { color: var(--text-muted); line-height: 2; }

.empty code {
  background: var(--card);
  border: 1px solid var(--border);
  border-radius: 6px;
  padding: 2px 8px;
  font-size: 13px;
  color: var(--accent);
}


/* â”€â”€ RESPONSIVE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
@media (max-width: 768px) {
  .vcard { width: 130px; }
  .music-card { width: 140px; }
  .section { padding-top: 32px; }
}

@media (max-width: 480px) {
  .vcard { width: 120px; }
}
</style>

<script>
  // â”€â”€ Continue Watching â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  const history = (() => {
    try { return JSON.parse(localStorage.getItem('nf_history') || '[]'); }
    catch { return []; }
  })();

  if (history.length > 0) {
    const section = document.getElementById('continueSection')!;
    const row = document.getElementById('continueRow')!;
    section.style.display = '';

    history.slice(0, 8).forEach((item: any) => {
      const a = document.createElement('a');
      a.href = `/${item.type === 'series' ? 'series' : 'movies'}/${item.id}`;
      a.className = 'vcard';
      a.innerHTML = `
        <div class="vcard-thumb" style="${item.thumb ? `background-image:url(${item.thumb})` : ''}">
          ${!item.thumb ? `<span class="vcard-letter">${item.title[0]}</span>` : ''}
          <div class="vcard-hover">
            <div class="vcard-play">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="white"><path d="M8 5v14l11-7z"/></svg>
            </div>
          </div>
          <div style="position:absolute;bottom:0;left:0;right:0;height:3px;background:rgba(255,255,255,0.15);">
            <div style="height:100%;width:${item.progress || 0}%;background:var(--accent);"></div>
          </div>
        </div>
        <div class="vcard-info">
          <div class="vcard-title">${item.title}</div>
          <div class="vcard-meta">${item.type === 'series' ? 'Series' : 'Movie'}</div>
        </div>
      `;
      row.appendChild(a);
    });
  }

  // â”€â”€ Music player trigger â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function playMusic(card: HTMLElement) {
    const raw = card.dataset.playlist;
    if (!raw) return;
    const playlist = JSON.parse(raw);
    const player = (window as any).netfilmPlayer;
    if (player) {
      player.setPlaylist(playlist);
      player.play(0);
    }
  }

  (window as any).playMusic = playMusic;
</script>
